  <!-- Cart Items -->
  <text x="100" y="180" font-family="Arial" font-size="20" font-weight="600" fill="#374151">Your Items (1)</text>
  
  <!-- Cart Item Card -->
  <g transform="translate(100, 200)">
    <rect width="700" height="150" rx="8" fill="white" stroke="#e5e7eb" stroke-width="2"/>
    
    <!-- Product Image -->
    <rect x="20" y="25" width="100" height="100" rx="4" fill="#dbeafe"/>
    <text x="70" y="85" font-size="48" text-anchor="middle">ðŸ¦´</text>
    
