    <!-- Remove Button -->
    <text x="650" y="77" font-family="Arial" font-size="14" fill="#ef4444" text-anchor="middle">Remove</text>
  </g>
  
  <!-- Order Summary -->
  <g transform="translate(850, 200)">
    <rect width="300" height="250" rx="8" fill="white" stroke="#e5e7eb" stroke-width="2"/>
    <text x="150" y="35" font-family="Arial" font-size="20" font-weight="bold" fill="#111827" text-anchor="middle">Order Summary</text>
    
    <line x1="20" y1="50" x2="280" y2="50" stroke="#e5e7eb" stroke-width="1"/>
    
    <text x="20" y="80" font-family="Arial" font-size="14" fill="#6b7280">Subtotal:</text>
    <text x="280" y="80" font-family="Arial" font-size="14" font-weight="600" fill="#111827" text-anchor="end">$49.99</text>
    
    <text x="20" y="110" font-family="Arial" font-size="14" fill="#6b7280">Shipping:</text>
    <text x="280" y="110" font-family="Arial" font-size="14" font-weight="600" fill="#111827" text-anchor="end">$5.00</text>
    
    <text x="20" y="140" font-family="Arial" font-size="14" fill="#6b7280">Tax:</text>
    <text x="280" y="140" font-family="Arial" font-size="14" font-weight="600" fill="#111827" text-anchor="end">$4.40</text>
    
    <line x1="20" y1="155" x2="280" y2="155" stroke="#e5e7eb" stroke-width="2"/>
    
    <text x="20" y="185" font-family="Arial" font-size="18" font-weight="bold" fill="#111827">Total:</text>
    <text x="280" y="185" font-family="Arial" font-size="18" font-weight="bold" fill="#2563eb" text-anchor="end">$59.39</text>
    
    <!-- Checkout Button -->
    <rect x="20" y="205" width="260" height="50" rx="8" fill="#2563eb"/>
    <text x="150" y="237" font-family="Arial" font-size="16" font-weight="bold" fill="white" text-anchor="middle">Proceed to Checkout</text>
  </g>
  
  <!-- Test Pass Badge -->
