    <text x="140" y="110" font-family="Arial" font-size="16" font-weight="bold" fill="#2563eb">$49.99</text>
    
    <!-- Quantity -->
    <rect x="500" y="50" width="120" height="40" rx="4" fill="#f3f4f6" stroke="#d1d5db" stroke-width="1"/>
