<svg width="1200" height="800" xmlns="http://www.w3.org/2000/svg">
  <rect width="1200" height="800" fill="#f9fafb"/>
  
  <!-- Browser Chrome -->
  <rect width="1200" height="60" fill="#e5e7eb"/>
  <circle cx="20" cy="30" r="8" fill="#ef4444"/>
  <circle cx="45" cy="30" r="8" fill="#eab308"/>
  <circle cx="70" cy="30" r="8" fill="#22c55e"/>
